<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f0f0f0">

    <!-- EditText for Zodiac Sign -->
    <EditText
        android:id="@+id/signEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your zodiac sign"
        android:textSize="16sp"
        android:inputType="text"
        android:padding="12dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_edittext_background"
        android:layout_alignParentTop="true"/>

    <!-- Button to Fetch Horoscope -->
    <Button
        android:id="@+id/buttonFetch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Horoscope"
        android:textColor="#ffffff"
        android:backgroundTint="#6200EE"
    android:layout_below="@id/signEditText"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:padding="12dp"/>

    <!-- TextView for displaying Horoscope -->
    <TextView
        android:id="@+id/horoscopeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Horoscope will appear here"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_below="@id/buttonFetch"
        android:layout_marginTop="30dp"
        android:padding="16dp"/>

</RelativeLayout>
